<?xml-stylesheet href="api-default_language.xsl" type="text/xsl"?>


<api.class
    name        = "Locks"
    object_name = "locks"
    base_dir    = "../"
    author      = "$Author: jz $"
    date        = "$Date: 2012-06-12 21:42:49 +0200 (Di, 12 Jun 2012) $"
>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <method name="add_lock">
        <com>
            <com.parameter name="lck">
                <com.type class="Lock"/>
            </com.parameter>
        </com>

        <title>
            Adds a lock to a Job Scheduler
        <!--Fügt dem Scheduler eine Sperre hinzu-->
        </title>
      
        <messages>
            <message level="error" code="SCHEDULER-416"/>
            <message level="error" code="SCHEDULER-422"/>
        </messages>
    </method>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <method name="create_lock">
        <com>
            <com.result>
                <com.type class="Lock"/>
            </com.result>
        </com>

        <title>Creates a new lock</title>
    <!--<title>Richtet eine neue Sperre ein</title>-->

        <description>
            <p>
                Returns a new lock <scheduler_method class="Lock"/>.
                This lock can be added to the Job Scheduler using
                <scheduler_method class="Locks" method="add_lock"/>.
            <!--Liefert eine neues <scheduler_method class="Lock"/>.
                Diese Sperre kann 
                mit <scheduler_method class="Locks" method="add_lock"/>
                dem Scheduler hinzugefügt werden.-->
            </p>
        </description>
    </method>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <property name="lock" access="read">
        <com>
            <com.parameter name="lock_name">
                <com.type type="BSTR"/>
            </com.parameter>

            <com.result>
                <com.type class="Lock"/>
            </com.result>
        </com>
        
        <title>
            Returns a lock
        <!--Liefert eine Sperre-->
        </title>
        
        <description>
            An exception will be returned if the lock is unknown.
        <!--Wenn die Sperre nicht bekannt ist, wird eine Exception geliefert.-->
        </description>

        <messages>
            <message level="error" code="SCHEDULER-401"/>
        </messages>
    </property>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <property name="lock_or_null" access="read">
        <com>
            <com.parameter name="lock_name">
                <com.type type="BSTR"/>
            </com.parameter>

            <com.result>
                <com.type class="Lock"/>
                <description>
                    <api.null/>, when the lock is unknown.
                <!--<api.null/>, wenn die Sperre nicht bekannt ist.-->
                </description>
            </com.result>
        </com>
        
        <title>
            Returns a lock
        <!--Liefert eine Spere-->
        </title>
    </property>

    <!--~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<textarea>
    <description>
        <p>
        </p>
    </description>

</textarea>
</api.class>
